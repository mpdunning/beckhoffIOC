#--- Next 4 records are used to control how many messages
#--- are allowed in the low priority message queue (in drvMBus) ----
record( longout, "$(P):LO:SC:DEBUG-$(M):ALLOW:INLQ"){
  field( DESC, "Allow In Low Prio Q")
  field( OUT,  "$(P):LO:DEBUG-$(M):ALLOW:INLQ PP")
}
record( longout, "$(P):LO:DEBUG-$(M):ALLOW:INLQ"){
  field( SDIS, "$(P):LO:DEBUG-$(M):ALLOW:INLQ:Sync.PACT")
  field( DISV, "1")
  field( DTYP, "asynInt32")
  field( OUT,  "@asyn(DEBUG,0,1)LO_ALLOWINLQ")
}
record( longin, "$(P):LI:DEBUG-$(M):ALLOW:INLQ"){
  field( DTYP, "asynInt32")
  field( INP,  "@asyn(DEBUG,0,1)LI_ALLOWINLQ")
  field( SCAN, "I/O Intr")
  field( FLNK, "$(P):LO:DEBUG-$(M):ALLOW:INLQ:Sync")
  field( PINI, "YES")
}
record( longout, "$(P):LO:DEBUG-$(M):ALLOW:INLQ:Sync"){
  field( DOL,  "$(P):LI:DEBUG-$(M):ALLOW:INLQ NPP")
  field( OMSL, "closed_loop")
  field( OUT,  "$(P):LO:SC:DEBUG-$(M):ALLOW:INLQ PP")
}
